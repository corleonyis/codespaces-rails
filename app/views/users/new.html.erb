<div class="mx-auto" style="width: 500px">
  <h1>ユーザー登録</h1>

  <%= form_with model: @user, url: signup_path, local: true do |form| %>
    <div class="form-group mt-3 mb-3">
      <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong><%= @user.errors.count %>個のエラーがあります。</strong>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.label :email, 'メールアドレス', class: "mt-2" %>
      <%= form.email_field :email, class: "form-control mt-2", placeholder: "e-mail address"%>

      <%= form.label :password, 'パスワード', class: "mt-2" %>
      <%= form.password_field :password, class: "form-control mt-2", placeholder: "password"%>

      <%= form.label :password_confirmation, 'パスワード(確認)', class: "mt-2" %>
      <%= form.password_field :password_confirmation, class: "form-control mt-2", placeholder: "password (confirm)"%>
    </div>
    <%= form.submit '登録', class: "btn btn-primary" %>
  <% end %>
  <div class="mt-3"><%= link_to 'ログインはこちら', login_path %></div>
</div>
